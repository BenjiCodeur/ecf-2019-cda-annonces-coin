{% extends 'layout.html.twig' %}


{% block body %}

    <h3 class="card card-header text-center text-white mt-3 mb-3 " style="background-color: #0c5460">Modifie ton annonce</h3>


    {{ form(adForm) }}
{% endblock %}

{% block js %}

    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('.custom-file input').on('change', function () {
                let fileName = $(this)[0].files[0].name;
                $(this).next('.custom-file-label').html(fileName);

            });

        });
    </script>

{% endblock js %}


