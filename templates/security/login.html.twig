{% extends 'template.html.twig' %}

{% block body %}

    <h1 class="mt-5">{{ formTitle }}</h1>

    {% if error %}
        <div class="alert alert-danger mt-2 mb-2">
            {{ error }}
        </div>
    {% endif %}

    <form action="{{ formAction }}" method="post">

        <div class="form-group">
            <label for="userName">Ton email</label>
            <input type="text" id="userName" name="_username" class="form-control">
        </div>

        <div class="form-group">
            <label for="pass">Ton mot de passe</label>
            <input type="password" id="pass" name="_password" class="form-control">
        </div>

        <button type="submit" class="btn btn-danger btn-block">Connecte-toi</button>
    </form>

{% endblock %}

